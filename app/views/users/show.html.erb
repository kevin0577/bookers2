<div class="row">
<div class="col-xs-3" >

<!-- ユーザー -->
<h2>User info</h2>
    <%= render 'info', user: current_user %>
<!-- 投稿 -->
<h2>New book</h2>
    <%= render "books/form" %>
</div>

<!-- book一覧 -->
<div class="col-xs-9">
<h3>Books</h3>
<table class="table table-hove">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to user_path do %>
<%= attachment_image_tag @user, :profile_image,:fill, 50, 50, format: 'jpeg'%>
<% end %>
</td>
<td>
<%= link_to  book.title, book_path(book.id) %>
</td>
<td>
<%= book.body %>
</td>
<!-- コメント件数 -->
<td>
<%= book.book_comments.count %>件コメント</h2>
</td>
</tr>
<% end %>
</tbody>
</table>

</div>
</div>



