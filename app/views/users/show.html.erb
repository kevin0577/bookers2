<div class="row">
<div class="col-xs-3" >
<!-- ユーザー -->
	<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image,:fill, 100, 100, fallback: "no_image.jpg"%>
	<table class="table">
	<tbody>
	<tr>
	<th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
	</tr>
	</tbody>
	</table>
  <div class="row">
      <%= link_to  edit_user_path(@user) do%>
      <div class="col-xs-12 btn btn-default">
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  </div>
  <% end %>
</div>
<!-- 投稿 -->
<h2>New book</h2>
<%= form_for(@newbook) do |f| %>
<div class="field row">
<p>Title</p>
<%= f.text_field :title, class: "col-xs-12 book_title"  %>
</div>
<div class="field row">
<p>Opinion</p>
<%= f.text_area :body, class: "col-xs-12 book_body"  %>
</div>
<div class="actions row">
<%= f.submit class: "btn btn-primary col-xs-12" %>
</div>
<% end %>
</div>
<!-- book一覧 -->
<div class="col-xs-9">
<h3>Books</h3>
<table class="table table-hove">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to user_path do %>
<%= attachment_image_tag @user, :profile_image,:fill, 50, 50, format: 'jpeg'%>
<% end %>
</td>
<td>
<%= link_to  book.title, book_path(book.id) %>
</td>
<td>
<%= book.body %>
</td>
<!-- コメント件数 -->
<td>
<%= book.book_comments.count %>件コメント</h2>
</td>
</tr>
<% end %>
</tbody>
</table>

</div>
</div>



