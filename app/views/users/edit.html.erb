
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
