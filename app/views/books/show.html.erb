<div class="row">
<div class="col-xs-3" >
	<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image,:fill, 100, 100, fallback: "no_image.jpg"%>
	<table class="table">
	<tbody>
	<tr>
	<th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
	</tr>
	</tbody>
	</table>
  <div class="row">
      <%= link_to  edit_user_path(@user) do%>
      <div class="col-xs-12 btn btn-default">
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  </div>
  <% end %>
</div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<div class="field row">
<p>Title</p>
<%= f.text_field :title, class: "col-xs-12 book_title"  %>
</div>

<div class="field row">
<p>Opinion</p>
<%= f.text_area :body, class: "col-xs-12 book_body"  %>
</div>

<div class="actions row">
<%= f.submit class: "btn btn-primary col-xs-12" %>
</div>
<% end %>
</div>

<div class="col-xs-9">

<h3>Book detail</h3>

<table class="table table-hove">
<thead>
</thead>

<tbody>

<tr>
<td>
  <%= link_to user_path(@user) do %>
  <%= attachment_image_tag @user, :profile_image,:fill, 50, 50, format: 'jpeg'%>
<p><%= @user.name %>
</p>
<% end %>
</td>
<td>
<%= link_to  @books.title, book_path(@books.id) %>
</td>
<td>
<%= @books.body %>
</td>
<% if @books.user_id == current_user.id %>
<td>
<%= link_to "Edit", edit_book_path(@books.id) %>
</td>
<td>
<%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %>
</td>
<td>
<% if Favorite.find_by(user_id: @current_user.id, book_id: @book.id) %>
    <%= link_to("/favorites/#{@book.id}/destroy", {method: "post"}) do %>
    <%= @book.favorites.count %>
    <% end %>
    <% else %>
    <%= link_to("/favorites/#{@book.id}/create", {method: "post"}) do %>
    <%= @book.favorites.count %>
    <% end %>
<% end %>
</td>
</tr>
<% end %>
</tbody>
</table>

</div>
</div>