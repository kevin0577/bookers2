<div class="container">
<div class="row">

	<% if @books.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2>error</h2>
    <ul>
      <% @books.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p id="notice">
 <%=  notice %>
</p>


<div class="col-xs-3" >
	<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image,:fill, 100, 100, fallback: "no_image.jpg"%>
	<table class="table">
	<tbody>
	<tr>
	<th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
	</tr>
	</tbody>
	</table>
  <div class="row">
      <%= link_to  edit_user_path(@user) do%>
      <div class="col-xs-12 btn btn-default">
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  </div>
  <% end %>
</div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<div class="row-field">
<p>Title</p>
<%= f.text_field :title %>
</div>
<div class="row-field">
<p>Opinion</p>
<%= f.text_area :body %>
</div>
<%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-xs-9">

<h3>Book detail</h3>

<table class="table table-hove">
<thead>
</thead>

<tbody>

<tr>
<td>
  <%= link_to user_path(@user) do %>
  <%= attachment_image_tag @user, :profile_image,:fill, 50, 50, format: 'jpeg'%>
<p><%= @user.name %>
</p>
<% end %>
</td>
<td>
<%= link_to  @books.title, book_path(@books.id) %>
</td>
<td>
<%= @books.body %>
</td>
<% if @books.user_id == current_user.id %>
<td>
<%= link_to "Edit", edit_book_path(@books.id) %>
</td>
<td>
<%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %>
</td>
</tr>
<% end %>
</tbody>
</table>

</div>
</div>
</div>